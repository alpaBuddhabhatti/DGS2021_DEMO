{
	"name": "pipeline1",
	"properties": {
		"activities": [
			{
				"name": "Copy data",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "XmlSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "XmlReadSettings",
							"validationMode": "none",
							"detectDataType": true,
							"namespaces": false
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['Customers']['row'][0]['CUSTOMERNO']"
								},
								"sink": {
									"name": "CUSTOMERNO",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['Customers']['row'][0]['OPERATION']"
								},
								"sink": {
									"name": "OPERATION",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['Customers']['row'][0]['EMAIL']"
								},
								"sink": {
									"name": "EMAIL",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['Customers']['row'][0]['Address'][0]['Line1']"
								},
								"sink": {
									"name": "Line1",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['Customers']['row'][0]['Address'][0]['Line2']"
								},
								"sink": {
									"name": "Line2",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['Customers']['row'][0]['Address'][0]['Line3']"
								},
								"sink": {
									"name": "Line3",
									"type": "String"
								}
							}
						],
						"collectionReference": ""
					}
				},
				"inputs": [
					{
						"referenceName": "DS_XMLSOUCE",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "DS_ADLS_STAGING",
						"type": "DatasetReference",
						"parameters": {
							"FileName": "test.xml",
							"Speccode": "file"
						}
					}
				]
			}
		],
		"folder": {
			"name": "DataMovements"
		},
		"annotations": []
	}
}